package fundamentos;

public class NotacaoPonto {
	public static void main(String[] args) {
		
		double a = 2.3;
		String s = "bom dia X";
		s = s.replace("X", "senhora");
		s = s.toUpperCase();
		s = s.concat("!!!");
		
		
		System.out.println(s);
		
		System.out.println("leo".toUpperCase());
		var x = "leo".toUpperCase();
		System.out.println(x);
		
		
	}

}
